  
<%- include('partials/_header') -%>

<%- include('partials/_navigation') -%>




<div class="col-lg-12">

    <form method="POST" action="/admin/add-product" encType="multipart/form-data">

        <div class="form-group row">
            <label for="productName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="productName" name="name">
            </div>
        </div>

        <div class="form-group row">
            <label for="image" class="col-sm-2 col-form-label">Image</label>
            <input type="file" id="image" name="image" class="form-control-file rounded-0">
          </div>



        <div class="form-group row">
            <label for="size" class="col-sm-2 col-form-label">Size</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="size" name="size">
            </div>
        </div>


        <div class="form-group row">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
        </div>

        <div class="form-group row">
            <label for="category" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
                <select class="form-control" id="category"  name="category">
                    <option value="-1">Kategori se√ßiniz</option>
                    <% for (let i=0; i < categories.length; i++) { %>
                    <option value="<%= categories[i]._id %>"><%= categories[i].name %></option>  
                    <% } %>  
                  </select>
            </div>
        </div>
   
    

        <div class="form-group row">
            <label for="moreInfo" class="col-sm-2 col-form-label">More Info</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="moreInfo" name="moreInfo">
            </div>
        </div>

        <div class="form-group row">
            <label for="color" class="col-sm-2 col-form-label">Color</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="color" name="color">
            </div>
        </div>

     

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <input type="submit" class="btn btn-primary" value="Save Product">
            </div>
        </div>



    </form>
</div>


<%- include('partials/_footer') -%>